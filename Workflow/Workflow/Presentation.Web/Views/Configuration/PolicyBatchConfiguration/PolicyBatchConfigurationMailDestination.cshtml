@model Presentation.Web.Models.Configuration.PolicyBatchConfigurationViewModel
@if (Model.Destinations != null) {
    <div class="row">
        @for (int i = 0; i < Model.Destinations.Count; i++) {
            <div class="col-md-6 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-1 col-md-2 col-lg-1">
                                <input type="hidden" name="@Html.NameFor(x => Model.Destinations[i].ParentId)" value="@(Model.Destinations[i].ParentId)" />
                                <input type="hidden" name="@Html.NameFor(x => Model.Destinations[i].UserId)" value="@(Model.Destinations[i].UserId)" />
                                <input type="checkbox" value="true" class="EditControl"
                                       name="@Html.NameFor(x => Model.Destinations[i].IsChecked)"
                                       @(Model.Destinations[i].IsChecked ? "checked" : "")
                                       @(Model.IsEditable ? "" : "disabled") />
                            </div>
                            <div class="col-sm-11 col-md-10 col-lg-11">
                                <label>@(Model.Destinations[i].Name)</label>
                            </div>
                            <div class="col-sm-1 col-md-2 col-lg-1">
                                &nbsp;
                            </div>
                            <div class="col-sm-11 col-md-10 col-lg-11">
                                <label>@(Model.Destinations[i].Email)</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}